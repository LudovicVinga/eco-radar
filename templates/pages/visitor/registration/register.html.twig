{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<header class="registration-header">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1 class="display-5 fw-bold mb-3">Rejoignez l'écosystème des acteurs engagés</h1>
        <p class="lead mb-4">Plateforme indépendante d'évaluation et de valorisation des pratiques éthiques.</p>
        <div class="d-flex">
          <div class="me-4">
            <div class="fw-bold fs-4">92%</div>
            <div class="text-muted small">Labels certifiés</div>
          </div>
          <div>
            <div class="fw-bold fs-4">18</div>
            <div class="text-muted small">Pays couverts</div>
          </div>
        </div>
      </div>
      <div class="col-lg-6 d-none d-lg-block">
    <div class="graphic-container d-flex align-items-center justify-content-center">
        <img src="{{ asset('images/static/visitor/image-inscription.png') }}" 
             alt="Inscription EcoRadar" 
             class="img-fluid rounded shadow-sm"
            style="height: 100%; width: 100%; object-fit: cover;">
    </div>
</div>

    </div>
  </div>
</header>

<main class="container my-5">
  <div class="row">
    <div class="col-lg-6 form-container">
      <h2 class="h3 mb-4">Créer votre compte professionnel</h2>

      {{ form_start(registrationForm) }}

      <div class="row">
        <div class="col-md-6">
          {{ form_label(registrationForm.firstName) }}
          {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.firstName) }}
        </div>
        <div class="col-md-6">
          {{ form_label(registrationForm.lastName) }}
          {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(registrationForm.lastName) }}
        </div>
      </div>

      {{ form_label(registrationForm.email) }}
      {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(registrationForm.email) }}

      {{ form_label(registrationForm.password.first, 'Mot de passe') }}
      {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
      <small class="text-muted">12 caractères minimum, avec majuscules, chiffres…</small>
      {{ form_errors(registrationForm.password.first) }}

      {{ form_label(registrationForm.password.second, 'Confirmez le mot de passe') }}
      {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
      {{ form_errors(registrationForm.password.second) }}

      <div class="form-check my-3">
        {{ form_widget(registrationForm.agreeTerms) }}
        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
          J'accepte les <a href="#" class="text-decoration-none">conditions générales</a>.
        </label>
        {{ form_errors(registrationForm.agreeTerms) }}
      </div>

      <button type="submit" class="btn btn-warning w-100">S'inscrire</button>

      {{ form_end(registrationForm) }}

      <div class="text-center mt-3">
        <p>Déjà membre ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
        <a href="{{ path('app_visitor_welcome') }}" class="small">← Retour à l'accueil</a>
      </div>
    </div>

    <div class="col-lg-6 ps-lg-5">
      <div class="p-4 bg-light rounded-3 mb-4">
        <h3 class="h4 mb-3">Vos avantages</h3>
        <ul class="list-unstyled">
          <li class="mb-3"><span class="text-warning fw-bold">✓</span> Visibilité accrue pour les labels</li>
          <li class="mb-3"><span class="text-warning fw-bold">✓</span> Sourcing sans greenwashing</li>
          <li class="mb-3"><span class="text-warning fw-bold">✓</span> Accès aux outils pro & tableaux de bord</li>
        </ul>
      </div>

      {# <div class="p-4 bg-white rounded-3 shadow-sm">
        <h3 class="h4 mb-3">Ils nous font confiance</h3>
        <div class="d-flex flex-wrap gap-3">
          <div class="bg-light p-3 rounded" style="width: 100px; height: 60px;"></div>
          <div class="bg-light p-3 rounded" style="width: 100px; height: 60px;"></div>
          <div class="bg-light p-3 rounded" style="width: 100px; height: 60px;"></div>
        </div>
      </div> #}
    </div>
  </div>
</main>
{% endblock %}
