{% extends 'themes/base_visitor_auth_registration.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block description %}Accédez à votre compte en toute sécurité. Connectez-vous pour profiter de tous nos services et gérer facilement vos informations personnelles.{% endblock %}

{% block keywords %}connexion, login, accès, authentification, compte, espace membre, identifiant, mot de passe, sécurité, se connecter, page de connexion, utilisateur, accès sécurisé, connexion compte{% endblock %}

{% block main %}

    {# title #}
    <div class="text-center mb-3">
        <h1 class="display-5 text-mainText fw-bold fst-italic">CONNEXION</h1>
        <h4>Connectez-vous et vivez l’actualité EcoRadar au plus près</h4>
    </div>

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-6 text-center d-flex flex-column justify-content-center align-items-center">
                {# Img #}
                <img src="/images/static/visitor/Logo_ecoRadar.jpg" class="img-fluid border border-5 border-warning rounded-circle" alt="Logo EcoRadar">
            </div>

            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center">
                {# Form #}
                <form method="post" class="login-form">
                {% if error %}
                    <div class="text-center alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% include 'components/alert.html.twig' %}

                <div class="mb-3">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="mb-3">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
                </div>

                <div class="row mb-3">
                    <div class="col-lg-6 my-2 text-md-start text-center">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                    <div class="col-lg-6 my-2 text-md-end text-center">
                        <a href="{{path('app_forgot_password_request')}}">Mot de passe oublié?</a>
                    </div>
                </div>

                <div>
                    <button formnovalidate class="btn btn-lg btn-warning w-100" type="submit">
                        Se connecter
                    </button>
                </div>
                </form>

                {# Links #}
                <div class="text-center mt-3">
                    <p>Vous n'avez pas encore de compte ? <a href="{{path('app_register')}}">Inscrivez-vous</a></p>
                    <p><a href="{{path('app_visitor_welcome')}}">Retour à l'accueil</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}