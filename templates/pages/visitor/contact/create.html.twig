{% extends 'themes/base_visitor.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block main %}
<section class="py-5" style="background-color: #f7fafdff;">
  <div class="container">
    <div class="row align-items-center">
      
      <!-- Formulaire -->
      <div class="col-md-6">
        <h2 class="mb-4">Contactez-nous</h2>

        {{ form_start(form) }}
        <div class="row g-3">
          <div class="col-md-6">
            {{ form_label(form.prenom, 'Prénom') }}
            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.prenom) }}
          </div>
          <div class="col-md-6">
            {{ form_label(form.nom, 'Nom') }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
          </div>
          {# <div class="col-md-6">
            {{ form_label(form.societe, 'Société') }}
            {{ form_widget(form.societe, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.societe) }}
          </div> #}
          <div class="col-md-6">
            {{ form_label(form.telephone, 'Téléphone') }}
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.telephone) }}
          </div>
          <div class="col-12">
            {{ form_label(form.email, 'Email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.email) }}
          </div>
          <div class="col-12">
            {{ form_label(form.message, 'Message') }}
            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 5}}) }}
            {{ form_errors(form.message) }}
          </div>
          <div class="col-12">
            {{ form_row(form.consentement) }}
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary w-100"style="background-color: #f4b860;">Envoyer le message</button>
          </div>
        </div>
        {# {{ form_end(form) }} #}
      </div>

      <!-- Image à droite -->
      <div class="col-lg-6 d-none d-lg-block p-0">
    <img
        src="{{ asset('images/static/visitor/image-contact2.png') }}"
        alt="Contact EcoRadar"
        class="w-100 h-100"
        style="object-fit: cover;"
    >
</div>

    </div>
  </div>
</section>
{% endblock %}
