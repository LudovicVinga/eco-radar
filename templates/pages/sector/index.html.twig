<script>
document.addEventListener("DOMContentLoaded", function () {
    // TEXTILE - affiché par défaut
    const ctx = document.getElementById('textileChart').getContext('2d');
    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: ['Certifié GOTS', 'Oeko-Tex', 'Fair Wear', 'Autres'],
            datasets: [{
                label: 'Répartition des labels textiles',
                data: [35, 25, 20, 20],
                backgroundColor: [
                    'rgba(140, 119, 176, 0.8)',
                    'rgba(33, 33, 77, 0.8)',
                    'rgba(251, 176, 59, 0.8)',
                    'rgba(200, 200, 200, 0.8)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });

    // COSMETIQUE - à charger dynamiquement
    let cosmeticChartInitialized = false;
    function initCosmeticChart() {
        if (cosmeticChartInitialized) return;
        const ctx2 = document.getElementById('cosmeticChart').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: ['Naturel', 'Bio', 'Synthétique', 'Mixte'],
                datasets: [{
                    label: 'Types de cosmétiques',
                    data: [40, 30, 20, 10],
                    backgroundColor: [
                        'rgba(140, 119, 176, 0.8)',
                        'rgba(251, 176, 59, 0.8)',
                        'rgba(33, 33, 77, 0.8)',
                        'rgba(200, 200, 200, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });
        cosmeticChartInitialized = true;
    }

    // ALIMENTAIRE - à charger dynamiquement
    let foodChartInitialized = false;
    function initFoodChart() {
        if (foodChartInitialized) return;
        const ctx3 = document.getElementById('foodChart').getContext('2d');
        new Chart(ctx3, {
            type: 'pie',
            data: {
                labels: ['Bio', 'Local', 'Équitable', 'Conventionnel'],
                datasets: [{
                    label: 'Types de production',
                    data: [35, 25, 20, 20],
                    backgroundColor: [
                        'rgba(251, 176, 59, 0.8)',
                        'rgba(140, 119, 176, 0.8)',
                        'rgba(33, 33, 77, 0.8)',
                        'rgba(200, 200, 200, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { position: 'bottom' } }
            }
        });
        foodChartInitialized = true;
    }

    // ➕ Bootstrap tab listener (le bon événement !)
    const tabLinks = document.querySelectorAll('.nav-link[data-bs-toggle="pill"]');
    tabLinks.forEach(link => {
        link.addEventListener('shown.bs.tab', function (event) {
            const targetId = event.target.getAttribute('href');
            if (targetId === '#cosmetique') initCosmeticChart();
            if (targetId === '#alimentaire') initFoodChart();
        });
    });
});

</script>


