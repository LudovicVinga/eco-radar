{% extends 'themes/base_user.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block description %}Découvrez votre espace utilisateur personnalisé : gérez facilement vos informations, accédez à vos services et profitez d’une expérience sur mesure.{% endblock %}

{% block keywords %}espace utilisateur, compte utilisateur, tableau de bord, gestion compte, profil personnel, paramètres utilisateur, informations personnelles, connexion compte{% endblock %}

{% block main %}

    <h1 class="display-4 text-center text-primary my-4 fw-bold" 
        style="text-shadow: 1px 1px 3px rgba(43, 62, 80, 0.5); letter-spacing: 0.05em;">
        Bonjour {{ app.user.firstName }} {{ app.user.lastName }}
    </h1>

    <div class="container mt-5 mb-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 text-center">
            <div class="d-flex align-items-center justify-content-center mb-3">
                <div class="me-3" style="width:6px; height:36px; background-color: #7566D9; border-radius:3px;"></div>
                <h2 class="fw-semibold mb-0" style="color: #2C3E50;">Contactez <span style="color: #7566D9;">EcoRadar</span></h2>
            </div>
            <p class="lead text-muted">
                Notre équipe est là pour vous accompagner : posez-nous vos questions, partagez vos besoins ou vos suggestions via ce formulaire.
            </p>
            </div>
        </div>
    </div>

    <hr class="my-5 border-3 border-warning opacity-50">

    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow rounded-4 border-0">
                    <div class="card-body p-4">

                        {% include 'components/alert.html.twig' %}

                        {{ form_start(form) }}

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold" for="premium_contact_form_firstName">Prénom <span class="text-danger">*</span></label>
                                <div class="text-danger">{{form_errors(form.firstName)}}</div>
                                {{ form_widget(form.firstName, {attr: {'class': 'form-control', 'autofocus':'autofocus'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold" for="premium_contact_form_lastName">Nom <span class="text-danger">*</span></label>
                                <div class="text-danger">{{form_errors(form.lastName)}}</div>
                                {{ form_widget(form.lastName, {attr: {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold" for="premium_contact_form_email">Email <span class="text-danger">*</span></label>
                                <div class="text-danger">{{form_errors(form.email)}}</div>
                                {{ form_widget(form.email, {attr: {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold" for="premium_contact_form_phone">Téléphone</label>
                                <div class="text-danger">{{form_errors(form.phone)}}</div>
                                {{ form_widget(form.phone, {attr: {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" for="premium_contact_form_company">Société <span class="text-danger">*</span></label>
                            <div class="text-danger">{{form_errors(form.company)}}</div>
                            {{ form_widget(form.company, {attr: {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold" for="premium_contact_form_message">Message <span class="text-danger">*</span></label>
                            <div class="text-danger">{{form_errors(form.message)}}</div>
                            {{ form_widget(form.message, {attr: {'class': 'form-control', 'rows': 5}}) }}
                        </div>

                        <div class="d-grid">
                            <input formnovalidate type="submit" value="Envoyer" class="btn" style="background-color: #7566D9; color: white; font-weight: 600; box-shadow: 0 2px 8px rgba(117, 102, 217, 0.5);" />
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5 border-3 border-warning opacity-50">

    <div class="container mt-5 mb-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 text-center">
            <div class="d-flex align-items-center justify-content-center mb-3">
                <div class="me-3" style="width:6px; height:36px; background-color: #7566D9; border-radius:3px;"></div>
                <h2 class="fw-semibold mb-0" style="color: #2C3E50;">Proposez-nous vos  <span style="color: #7566D9;">labels</span></h2>
            </div>
            <p class="lead text-muted">
                Donnez une visibilité supplémentaire à vos labels : proposez vos projets ici.
            </p>
            </div>
        </div>
        
        <div class="d-flex justify-content-center">
            <a href="{{path('app_user_create_label')}}" type="subit" class="btn btn-secondary btn-lg rounded-pill px-4">Formulaire des labels</a>
        </div>
    </div>

{% endblock %}