{% extends "themes/base_admin.html.twig" %}

{% block title %}Tableau de bord{% endblock %}

{% block description %}Accédez à votre espace administrateur sécurisé pour gérer efficacement vos contenus, utilisateurs et paramètres.{% endblock %}

{% block main %}
    <h1 class="text-center my-3 display-5">Bienvenue {{app.user.firstName}} {{app.user.lastName}}</h1>

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="card shadow-sm rounded-4 border-0">
                    <div class="card-body p-4 d-flex flex-column">
                        <h5 class="card-title fw-bold mb-2">Catégories</h5>
                        <p class="card-text text-secondary mb-4">
                        {{categories_count}}
                        </p>
                        <a href="{{path('app_admin_category_index')}}" class="btn btn-secondary rounded-pill px-4 mt-auto">Consulter</a>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 mb-4">
                <div class="card shadow-sm rounded-4 border-0">
                    <div class="card-body p-4 d-flex flex-column">
                        <h5 class="card-title fw-bold mb-2">Labels</h5>
                        <p class="card-text text-secondary mb-4">
                        {{labels_count}}
                        </p>
                        <a href="{{path('app_admin_label_index')}}" class="btn btn-secondary rounded-pill px-4 mt-auto">Consulter</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="card shadow-sm rounded-4 border-0">
                    <div class="card-body p-4 d-flex flex-column">
                        <h5 class="card-title fw-bold mb-2">Utilisateurs</h5>
                        <p class="card-text text-secondary mb-4">
                        {{users_count}}
                        </p>
                        <a href="{{path('app_admin_user_index')}}" class="btn btn-secondary rounded-pill px-4 mt-auto">Consulter</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="card shadow-sm rounded-4 border-0">
                    <div class="card-body p-4 d-flex flex-column">
                        <h5 class="card-title fw-bold mb-2">Contacts</h5>
                        <p class="card-text text-secondary mb-4">
                        {{contacts_count}}
                        </p>
                        <a href="{{path('app_admin_contact_index')}}" class="btn btn-secondary rounded-pill px-4 mt-auto">Consulter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}