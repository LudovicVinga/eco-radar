        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-dark d-flex align-items-center fs-4" href="{{ path('app_visitor_welcome') }}">
                <img src="/images/static/visitor/Logo_ecoRadar.jpg" alt="EcoRadar" width="48" class="rounded-circle me-2 border border-white shadow-sm">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 fs-5">
                   
                    <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('a_propos') }}">À propos</a></li>
                    <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('explorer') }}">Explorer</a></li>
                    <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('visualisations') }}">Visualisations</a></li>

                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('app_admin_home') }}">Admin</a></li>
                        {% elseif is_granted('ROLE_USER') %}
                            <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('app_user_home') }}">Mon espace</a></li>
                        {% endif %}
                        <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('app_login') }}">Connexion</a></li>
                        <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('app_register') }}">Inscription</a></li>
                    {% endif %}
                    <li class="nav-item"><a class="nav-link text-dark fw-semibold px-3" href="{{ path('app_visitor_contact_create') }}">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="pt-5 mt-5">
    {% block main %}{% endblock %}
    <div class="container my-5">
        {% block body %}{% endblock %}
