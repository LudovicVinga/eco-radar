{% apply spaceless %}
<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Nouveau contact PREMIUM</title>
</head>
<body style="margin:0;padding:0;background:#f6f7fb;font-family:Arial,Helvetica,sans-serif;color:#222;">
  <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
    <tr>
      <td align="center" style="padding:24px;">
        <table role="presentation" width="600" cellpadding="0" cellspacing="0" style="background:#ffffff;border-radius:8px;overflow:hidden;">
          <tr>
            <td style="background:#21214D;color:#fff;padding:16px 24px;font-size:18px;font-weight:bold;">
              EcoRadar – Nouveau message PREMIUM
            </td>
          </tr>
          <tr>
            <td style="padding:24px;">
              <h2 style="margin:0 0 12px 0;">Bonjour Eve&nbsp;!</h2>

              <p style="margin:0 0 12px 0;">
                Vous avez reçu un message d’un contact <strong>PREMIUM</strong> via votre application EcoRadar.
              </p>

              <p style="margin:16px 0 8px 0;font-weight:bold;">Coordonnées</p>
              <ul style="margin:0 0 16px 22px;padding:0;">
                <li><strong>Identité</strong> :
                  {{ contactPremium.firstName|e }} {{ contactPremium.lastName|e }}
                </li>
                <li><strong>Email pro</strong> : {{ contactPremium.email|e }}</li>
                <li><strong>Société</strong> : {{ contactPremium.company|e }}</li>
                <li><strong>Téléphone</strong> :
                  {{ contactPremium.phone ? contactPremium.phone|e : "Non renseigné"|e }}
                </li>
              </ul>

              <p style="margin:16px 0 8px 0;font-weight:bold;">Message</p>
              <div style="white-space:pre-line;border:1px solid #eee;border-radius:6px;padding:12px;background:#fafafa;">
                {{ contactPremium.message|e }}
              </div>

              <p style="margin:16px 0 0 0;color:#555;font-size:12px;">
                Reçu le {{ (contactPremium.createdAt ?? "now"|date)|date('d/m/Y H:i') }}
              </p>
            </td>
          </tr>
          <tr>
            <td style="background:#f0f1f6;color:#666;padding:12px 24px;font-size:12px;text-align:center;">
              © {{ "now"|date("Y") }} EcoRadar — Ceci est un message automatique.
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
{% endapply %}
